---
// HeroSection.astro - Versión Industrial
import { Image } from "astro:assets";
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";
import SecondaryCTA from "@components/ui/buttons/SecondaryCTA.astro";

// IMPORTANTE: Ajusta la ruta si tu imagen está en otro lado.
import navImage from "@images/nav.jpeg";

// Define props from Astro
const {
  title,
  subTitle,
  primaryBtn,
  primaryBtnURL,
  secondaryBtn,
  secondaryBtnURL,
  src = navImage,
  alt
} = Astro.props;

// Define TypeScript interface for props
interface Props {
  title: string;
  subTitle?: string;
  primaryBtn?: string;
  primaryBtnURL?: string;
  secondaryBtn?: string;
  secondaryBtnURL?: string;
  src?: any;
  alt?: string;
  // Hemos eliminado las props de reviews porque ya no se usan
}
---

<section class="relative w-screen left-1/2 -translate-x-1/2 flex items-center justify-center min-h-screen -mt-32 pt-32 overflow-hidden">

  <div class="absolute inset-0 z-0">
    {src &&
      <Image
        src={src}
        alt={alt || "Hero Image"}
        class="h-full w-full object-cover object-center"
        draggable={"false"}
        loading={"eager"}
        format={"avif"}
      />
    }
    <div class="absolute inset-0 bg-neutral-900/60 dark:bg-black/50"></div>
  </div>

  <div class="relative z-10 mx-auto max-w-[85rem] px-4 sm:px-6 lg:px-8 text-center flex flex-col items-center justify-center h-full">

    <h1
      class="block text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-7xl lg:leading-tight"
    >
      <Fragment set:html={title} />
    </h1>

    {subTitle &&
      <p class="mt-6 text-lg text-gray-100 lg:text-xl lg:w-2/3 mx-auto font-medium text-pretty">
        {subTitle}
      </p>
    }

    <div class="mt-8 gap-4 flex flex-col sm:flex-row justify-center items-center">
      {primaryBtn &&
      <PrimaryCTA title={primaryBtn} url={primaryBtnURL} />
      }
      {secondaryBtn &&
      <SecondaryCTA title={secondaryBtn} url={secondaryBtnURL} />
      }
    </div>

    <div class="mt-16 w-full max-w-3xl border-t border-white/20 pt-8 animate-fade-in">
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-8">
            <div class="flex flex-col items-center justify-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-settings-automation h-10 w-10 text-red-500" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M10.325 4.317c.426 -1.756 2.924 -1.756 3.35 0a1.724 1.724 0 0 0 2.573 1.066c1.543 -.94 3.31 .826 2.37 2.37a1.724 1.724 0 0 0 1.065 2.572c1.756 .426 1.756 2.924 0 3.35a1.724 1.724 0 0 0 -1.066 2.573c.94 1.543 -.826 3.31 -2.37 2.37a1.724 1.724 0 0 0 -2.572 1.065c-.426 1.756 -2.924 1.756 -3.35 0a1.724 1.724 0 0 0 -2.573 -1.066c-1.543 .94 -3.31 -.826 -2.37 -2.37a1.724 1.724 0 0 0 -1.065 -2.572c-1.756 -.426 -1.756 -2.924 0 -3.35a1.724 1.724 0 0 0 1.066 -2.573c-.94 -1.543 .826 -3.31 2.37 -2.37c1.121 .64 2.505 .234 3.073 -.85z" />
                    <path d="M12 9v6" />
                    <path d="M9 12h6" />
                  </svg>
                <div class="text-3xl font-bold text-white">+15 Años</div>
                <div class="text-sm text-gray-300 uppercase tracking-wider font-semibold">Experiencia Industrial</div>
            </div>

            <div class="flex flex-col items-center justify-center gap-2 relative sm:before:content-[''] sm:before:absolute sm:before:left-[-1rem] sm:before:top-1/2 sm:before:-translate-y-1/2 sm:before:h-12 sm:before:w-px sm:before:bg-white/20 sm:after:content-[''] sm:after:absolute sm:after:right-[-1rem] sm:after:top-1/2 sm:after:-translate-y-1/2 sm:after:h-12 sm:after:w-px sm:after:bg-white/20">
                 <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-helmet h-10 w-10 text-red-500" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M12 4a9 9 0 0 1 5.656 16h-11.312a9 9 0 0 1 5.656 -16z" />
                    <path d="M12 4v5" />
                    <path d="M12 9h-8" />
                    <path d="M12 9h8" />
                  </svg>
                <div class="text-3xl font-bold text-white">+250</div>
                <div class="text-sm text-gray-300 uppercase tracking-wider font-semibold">Proyectos Ejecutados</div>
            </div>

            <div class="flex flex-col items-center justify-center gap-2">
                 <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-certificate h-10 w-10 text-red-500" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
