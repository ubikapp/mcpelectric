---
// Import SecondaryCTA component for use in this module
import SecondaryCTA from "@components/ui/buttons/SecondaryCTA.astro";
import Icon from "@components/ui/icons/Icon.astro";

// Definimos los datos de los planes directamente aquí para facilitar la edición
const pricingData = {
  title: "Planes de Mantenimiento",
  subTitle: "Continuidad operativa y fiabilidad garantizada para tu industria.",
  btnText: "Ver detalles completos",
  thirdOption: "¿Necesitas una solución a medida para una flota grande?",
  
  // PLAN 1: BÁSICO
  basic: {
    name: "PLAN BÁSICO",
    description: "Para mantenimiento esencial y acceso a catálogo.",
    price: "Consultar",
    cents: "",
    billingFrequency: "/mes",
    features: [
      "Beneficios en productos del catálogo",
      "Ofertas exclusivas",
      "Opción de añadir servicios adicionales",
      "Excelente relación precio"
    ],
    purchaseBtnTitle: "Consultar Básico",
    purchaseLink: "/contacto?plan=basico",
  },

  // PLAN 2: NEXUS (DESTACADO)
  nexus: {
    name: "PLAN NEXUS",
    description: "La opción equilibrada con soporte prioritario.",
    price: "Consultar",
    cents: "",
    billingFrequency: "/mes",
    badge: "Recomendado",
    features: [
      "Beneficios exclusivos en servicios",
      "Descuentos en tus servicios",
      "Opción de añadir otro servicio al plan",
      "Soporte prioritario"
    ],
    purchaseBtnTitle: "Consultar Nexus",
    purchaseLink: "/contacto?plan=nexus",
  },

  // PLAN 3: PRO
  pro: {
    name: "PLAN PRO",
    description: "Cobertura total y beneficios máximos.",
    price: "Consultar",
    cents: "",
    billingFrequency: "/mes",
    features: [
      "Acceso automático a 10% de descuento",
      "Descuentos en la tienda",
      "Acceso completo a todos los servicios",
      "Soporte técnico dedicado"
    ],
    purchaseBtnTitle: "Consultar PRO",
    purchaseLink: "/contacto?plan=pro",
  }
};
---

<section
  class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
>
  <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
    <h2
      class="text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight"
    >
      {pricingData.title}
    </h2>
    <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-400">
      {pricingData.subTitle}
    </p>
  </div>

  <div class="flex flex-wrap items-stretch justify-center gap-4 lg:gap-8">
    
    <div class="flex w-full flex-col rounded-xl bg-gray-800 p-6 sm:w-[45%] lg:w-[30%] hover:scale-105 transition-transform duration-300">
      <div class="mb-4">
        <h3 class="text-2xl font-bold text-neutral-100 sm:text-3xl">
          {pricingData.basic.name}
        </h3>
        <p class="text-indigo-300 min-h-[3rem]">{pricingData.basic.description}</p>
      </div>

      <div class="mb-4">
        <span class="text-3xl font-bold text-neutral-200">{pricingData.basic.price}</span>
        <span class="text-sm text-indigo-200">{pricingData.basic.billingFrequency}</span>
      </div>

      <ul class="mb-6 space-y-2 text-neutral-300 flex-1">
        {pricingData.basic.features.map((feature) => (
          <li class="flex items-center gap-1.5">
            <Icon name="checkCircle" /> 
            <span>{feature}</span>
          </li>
        ))}
      </ul>

      <a
        href={pricingData.basic.purchaseLink}
        class="mt-auto block rounded-lg bg-gray-600 px-8 py-3 text-center text-sm font-bold text-gray-100 outline-none ring-indigo-300 transition duration-100 hover:bg-gray-500 focus-visible:ring-3 md:text-base"
      >
        {pricingData.basic.purchaseBtnTitle}
      </a>
    </div>

    <div class="flex w-full flex-col rounded-xl bg-gradient-to-tr from-red-700 to-red-500 p-6 shadow-xl sm:w-[45%] lg:w-[30%] scale-105 z-10">
      <div class="mb-4 flex flex-col items-start justify-between gap-4 lg:flex-row">
        <div>
          <h3 class="text-2xl font-bold text-neutral-100 sm:text-3xl">
            {pricingData.nexus.name}
          </h3>
          <p class="text-red-100 min-h-[3rem]">{pricingData.nexus.description}</p>
        </div>
        <span class="order-first inline-block rounded-full bg-white/20 px-3 py-1 text-xs font-bold uppercase tracking-wider text-center text-white lg:order-none">
          {pricingData.nexus.badge}
        </span>
      </div>

      <div class="mb-4">
        <span class="text-3xl font-bold text-neutral-100">{pricingData.nexus.price}</span>
        <span class="text-sm text-red-100">{pricingData.nexus.billingFrequency}</span>
      </div>

      <ul class="mb-6 space-y-2 text-red-50 flex-1">
        {pricingData.nexus.features.map((feature) => (
          <li class="flex items-center gap-1.5">
            <Icon name="checkCircle" />
            <span>{feature}</span>
          </li>
        ))}
      </ul>

      <a
        href={pricingData.nexus.purchaseLink}
        class="mt-auto block rounded-lg bg-white px-8 py-3 text-center text-sm font-bold text-red-700 outline-none ring-red-300 transition duration-300 hover:bg-gray-100 focus-visible:ring-3 md:text-base"
      >
        {pricingData.nexus.purchaseBtnTitle}
      </a>
    </div>

    <div class="flex w-full flex-col rounded-xl bg-gray-800 p-6 sm:w-[45%] lg:w-[30%] hover:scale-105 transition-transform duration-300">
      <div class="mb-4">
        <h3 class="text-2xl font-bold text-neutral-100 sm:text-3xl">
          {pricingData.pro.name}
        </h3>
        <p class="text-indigo-300 min-h-[3rem]">{pricingData.pro.description}</p>
      </div>

      <div class="mb-4">
        <span class="text-3xl font-bold text-neutral-200">{pricingData.pro.price}</span>
        <span class="text-sm text-indigo-200">{pricingData.pro.billingFrequency}</span>
      </div>

      <ul class="mb-6 space-y-2 text-neutral-300 flex-1">
        {pricingData.pro.features.map((feature) => (
          <li class="flex items-center gap-1.5">
            <Icon name="checkCircle" />
            <span>{feature}</span>
          </li>
        ))}
      </ul>

      <a
        href={pricingData.pro.purchaseLink}
        class="mt-auto block rounded-lg bg-gray-600 px-8 py-3 text-center text-sm font-bold text-gray-100 outline-none ring-indigo-300 transition duration-100 hover:bg-gray-500 focus-visible:ring-3 md:text-base"
      >
        {pricingData.pro.purchaseBtnTitle}
      </a>
    </div>

  </div>

  <div class="mt-8 flex items-center justify-center gap-x-3 md:mt-12">
    <p class="text-sm text-neutral-600 dark:text-neutral-400">
      {pricingData.thirdOption}
    </p>
    <SecondaryCTA title="Contactar Ventas" url="/contacto" />
  </div>
</section>