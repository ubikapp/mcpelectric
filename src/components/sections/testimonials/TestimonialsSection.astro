---
// Importamos los componentes necesarios
import TestimonialItem from "./TestimonialItem.astro";
import StatsGrid from "../../ui/blocks/StatsGrid.astro";

// Definimos los datos de MCP Electric directamente aquí
const title = "Los números hablan por nosotros";
const subTitle = "Nuestra trayectoria en la región de Magallanes respalda cada uno de nuestros servicios, desde la automatización industrial hasta el mantenimiento naval.";

const testimonials = [
  {
    content:
      "La capacidad de respuesta de MCP Electric ante emergencias críticas es inigualable. Su trabajo en el revamping de nuestros sistemas de navegación nos permitió volver a operar en tiempo récord y con total seguridad.",
    author: "Jefe de Flota",
    role: "Sector Pesquero | Punta Arenas",
    avatarSrc:
      "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  },
];

const statistics = [
  {
    count: "+15",
    description: "años de experiencia en el rubro eléctrico industrial",
  },
  {
    count: "+40",
    description: "contratos ejecutados exitosamente con el Estado",
  },
  {
    count: "+250",
    description: "proyectos de automatización y montaje realizados",
  },
  {
    count: "100%",
    description: "compromiso con la calidad y la seguridad normativa",
  },
];
---

<section
  class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
>
  <div
    class="lg:grid lg:grid-cols-12 lg:items-center lg:justify-between lg:gap-16"
  >
    <div class="lg:col-span-5 lg:col-start-1">
      <div class="mb-8">
        <h2
          class="mb-2 text-3xl font-bold text-neutral-800 dark:text-neutral-200 lg:text-4xl"
        >
          {title}
        </h2>
        {
          subTitle && (
            <p class="text-neutral-600 dark:text-neutral-400">{subTitle}</p>
          )
        }
      </div>

      {
        testimonials &&
          testimonials.map((testimonial) => (
            <TestimonialItem
              content={testimonial.content}
              author={testimonial.author}
              role={testimonial.role}
              avatarSrc={testimonial.avatarSrc}
            />
          ))
      }
    </div>

    {
      statistics && (
        <div class="mt-10 lg:col-span-6 lg:col-end-13 lg:mt-0">
          <div class="space-y-6 sm:space-y-8">
            <ul class="grid grid-cols-2 divide-y-2 divide-x-2 divide-neutral-300 overflow-hidden dark:divide-neutral-700 border-2 border-neutral-300 dark:border-neutral-700 rounded-xl">
              {statistics.map((stat, index) => (
                <StatsGrid
                  count={stat.count}
                  description={stat.description}
                  index={index}
                />
              ))}
            </ul>
          </div>
        </div>
      )
    }
  </div>
</section>
