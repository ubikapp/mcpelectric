---
// Obtener título y contenido de las propiedades de Astro
const { heading, content } = Astro.props;

// Definir interfaz TypeScript para las propiedades
interface Props {
  heading?: string;
  content?: string;
}

// Definir clases para el título y el contenido
const headingClasses =
  "text-balance text-lg font-bold text-neutral-800 dark:text-neutral-200";
const contentClasses =
  "mt-1 text-pretty text-neutral-700 dark:text-neutral-300";
---

<div class="flex gap-x-5">
  <slot />
  <div class="grow">
    <h3 class={headingClasses}>
      {heading}
    </h3>
    <p class={contentClasses}>{content}</p>
  </div>
</div>