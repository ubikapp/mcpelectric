---
// Extraer las propiedades de Astro.props
const { title, subTitle } = Astro.props;

// Definir la interfaz TypeScript para las propiedades
interface Props {
  title: string;
  subTitle: string;
}
---

<div class="lg:pe-6 xl:pe-12">
  <p class="text-6xl font-bold leading-10 text-red-600 dark:text-red-500">
    {title}
  </p>
  <p class="mt-2 text-neutral-600 dark:text-neutral-400 sm:mt-3">{subTitle}</p>
</div>