---
// Extraer las propiedades de Astro.props
const { title } = Astro.props;

// Definir la interfaz TypeScript para las propiedades
interface Props {
  title: string;
}

// Definir clases CSS para estilizar el botón
// CAMBIO: Se cambió text-neutral-700 a text-white para contraste sobre rojo
const baseClasses =
  "inline-flex w-full items-center justify-center gap-x-2 rounded-lg px-4 py-3 text-sm font-bold text-white focus-visible:ring-3 outline-none transition duration-300";
const borderClasses = "border border-transparent";
// CAMBIO: bg-yellow-400 a bg-red-600 (Color de marca)
const bgColorClasses = "bg-red-600 dark:focus:outline-none";
// CAMBIO: hover:bg-yellow-500 a hover:bg-red-700 (Efecto hover más oscuro)
const hoverClasses = "hover:bg-red-700";
const fontSizeClasses = "2xl:text-base";
const disabledClasses = "disabled:pointer-events-none disabled:opacity-50";
const ringClasses = "ring-zinc-500 dark:ring-zinc-200";
---

<button
  type="submit"
  class={`${baseClasses} ${borderClasses} ${bgColorClasses} ${hoverClasses} ${fontSizeClasses} ${disabledClasses} ${ringClasses}`}
  >{title}</button
>