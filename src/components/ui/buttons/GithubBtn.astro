---
import Icon from "@components/ui/icons/Icon.astro";
const { title, url } = Astro.props;

interface Props {
  title?: string;
  url?: string;
}

// CAMBIO: text-neutral-700 -> text-white (para contraste sobre rojo)
const baseClasses =
  "group inline-flex items-center justify-center gap-x-3 rounded-lg px-4 py-3 text-center text-sm font-medium text-white ring-zinc-500 focus-visible:ring-3 transition duration-300 outline-none";
const borderClasses = "border border-transparent";
// CAMBIO: bg-yellow-400 -> bg-red-600 (Rojo corporativo)
const bgColorClasses = "bg-red-600 dark:focus:outline-none";
// CAMBIO: Sombra amarilla -> Sombra roja al pasar el mouse
const hoverClasses = "hover:shadow-2xl hover:shadow-red-500/50 hover:bg-red-700";
const fontSizeClasses = "2xl:text-base";
const ringClasses = "dark:ring-zinc-200";
---

<a
  class={`${baseClasses} ${borderClasses} ${bgColorClasses} ${hoverClasses} ${fontSizeClasses} ${ringClasses}`}
  href={url}
  target="_blank"
  rel="noopener noreferrer"
>
  <Icon name="github" />
  {title}
</a>