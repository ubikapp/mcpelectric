---
// Desestructurar las propiedades de Astro.props
const { id, dataTab, title, first } = Astro.props;

// Definir interfaz TypeScript para las propiedades
interface Props {
  id: string;
  dataTab: string;
  title: string;
  first?: boolean;
}

// Definir constantes para clases de estilo
// NOTA: Cambié outline-hidden a outline-none para asegurar compatibilidad estándar
const BUTTON_CLASS =
  "flex w-full justify-center rounded-xl border border-transparent p-3 outline-none ring-zinc-500 transition duration-300 hover:bg-neutral-100 focus-visible:ring-3 dark:ring-zinc-200 dark:hover:bg-neutral-700 dark:focus:outline-none md:p-5";

const HEADING_CLASS = "block text-center font-bold";
const INACTIVE_HEADING_CLASS = "text-neutral-800 dark:text-neutral-200";
---

<button
  type="button"
  class={`${BUTTON_CLASS} ${first ? "active bg-neutral-100 hover:border-transparent dark:bg-white/[.05]" : ""}`}
  id={id}
  data-target={dataTab}
  role="tab"
>
  <span
    class={`${HEADING_CLASS} ${first ? "text-red-600 dark:text-red-500" : INACTIVE_HEADING_CLASS}`}
  >
    {title}
  </span>
</button>