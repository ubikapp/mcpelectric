---
// Importar componentes necesarios desde archivos individuales
import EmailInput from "./input/EmailInput.astro";
import PasswordInput from "./input/PasswordInput.astro";
import Checkbox from "./input/Checkbox.astro";
import GoogleBtn from "@components/ui/buttons/GoogleBtn.astro";
import AuthBtn from "@components/ui/buttons/AuthBtn.astro";

// Objeto de configuración para la personalización del componente
const config = {
  id: "hs-toggle-between-modals-register-modal", // Identificador del Modal
  title: "Regístrate", // Encabezado principal
  subTitle: "¿Ya tienes una cuenta?", // Texto del sub-encabezado
  loginBtn: "Inicia sesión aquí", // Texto para el botón de login
  loginBtnDataHS: "#hs-toggle-between-modals-login-modal", // Enlace objetivo para el botón de login
};
---

<div
  id={config.id}
  class="hs-overlay hs-overlay-backdrop-open:bg-neutral-900/90 absolute start-0 top-0 z-50 hidden h-full w-full"
  data-lenis-prevent
>
  <div
    class="hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 m-3 mt-0 opacity-0 transition-all ease-out sm:mx-auto sm:w-full sm:max-w-lg"
  >
    <div class="mx-auto w-full max-w-md p-6">
      <div
        class="mt-7 flex max-h-[calc(100vh-8rem)] flex-col rounded-xl border border-neutral-200 bg-neutral-100 shadow-sm dark:border-neutral-700 dark:bg-neutral-800"
      >
        <div class="overflow-y-auto p-4 sm:p-7">
          <div class="text-center">
            <div
              class="block text-2xl font-bold text-neutral-800 dark:text-neutral-200"
              role="heading"
              aria-level="1"
              aria-label={config.title}
            >
              {config.title}
            </div>
            <p class="mt-2 text-sm text-neutral-600 dark:text-neutral-400">
              {config.subTitle}
              <button
                class="rounded-lg p-1 font-medium text-red-600 decoration-2 ring-zinc-500 outline-none hover:underline focus-visible:ring-3 dark:text-red-500 dark:ring-zinc-200 dark:focus:outline-none"
                data-hs-overlay={config.loginBtnDataHS}
              >
                {config.loginBtn}
              </button>
            </p>
          </div>
          <div class="mt-5">
            <GoogleBtn title="Regístrate con Google" />
            <div
              class="flex items-center py-3 text-xs text-neutral-400 uppercase before:me-6 before:flex-[1_1_0%] before:border-t before:border-neutral-200 after:ms-6 after:flex-[1_1_0%] after:border-t after:border-neutral-200 dark:text-neutral-500 dark:before:border-neutral-600 dark:after:border-neutral-600"
            >
              O
            </div>
            <form>
              <div class="grid gap-y-4">
                <EmailInput
                  id="register-email"
                  errorId="register-email-error"
                />
                <PasswordInput
                  id="create-password"
                  errorId="register-password-error"
                  content="Se requieren 8+ caracteres"
                />
                <PasswordInput
                  label="Confirmar contraseña"
                  id="confirm-password"
                  errorId="confirm-password-error"
                  content="La contraseña no coincide"
                />
                <Checkbox label="Acepto los " , id="terms-agree">
                  <a
                    class="font-medium text-red-600 decoration-2 hover:underline dark:text-red-500 dark:focus:outline-none"
                    href="#">Términos y Condiciones</a
                  >
                </Checkbox>
                <AuthBtn title="Registrarse" />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>