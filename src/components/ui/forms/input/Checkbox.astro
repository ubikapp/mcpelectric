---
// Configuración de propiedades con valor por defecto en español
const { label = "Recuérdame", id } = Astro.props;

interface Props {
  label?: string;
  id?: string;
}
---

<div class="flex items-center">
  <div class="flex">
    <input
      id={id}
      name="remember-me"
      type="checkbox"
      class="pointer-events-none mt-0.5 shrink-0 rounded-sm border-neutral-200 text-red-600 focus:ring-red-600 dark:border-neutral-700 dark:bg-neutral-800 dark:checked:border-red-600 dark:checked:bg-red-600 dark:focus:ring-offset-neutral-800"
    />
  </div>
  <div class="ms-3">
    <label for={id} class="text-sm text-neutral-800 dark:text-neutral-200"
      >{label} <slot />
    </label>
  </div>
</div>