---
// Importación de componentes y utilidades
import MainLayout from "@/layouts/MainLayout.astro";
import CardBlog from "@components/ui/cards/CardBlog.astro";
import CardBlogRecent from "@components/ui/cards/CardBlogRecent.astro";
import CardInsight from "@components/ui/cards/CardInsight.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { SITE } from "@data/constants";

// 1. Obtener las entradas de la colección "blog" que están en la subcarpeta "es/"
const spanishProjectEntries = await getCollection("blog", ({ id }) => {
  return id.startsWith("es/");
});

// 2. Obtener las entradas de "insights" en español
const spanishInsightsEntries = await getCollection("insights", ({ id }) => {
  return id.startsWith("es/");
});

// 3. Ordenar proyectos por fecha de publicación (Más reciente primero)
const projects: CollectionEntry<"blog">[] = spanishProjectEntries.sort(
  (a: CollectionEntry<"blog">, b: CollectionEntry<"blog">) =>
    b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const insightPosts: CollectionEntry<"insights">[] = spanishInsightsEntries;

// 4. Lógica de seguridad para evitar errores "Cannot read properties of undefined"
// Si no hay proyectos, estas variables serán null o arrays vacíos
const mostRecentProject: CollectionEntry<"blog"> | null = projects.length > 0 ? projects[0] : null;
const otherProjects: CollectionEntry<"blog">[] = projects.length > 1 ? projects.slice(1) : [];

// 5. Configuración de textos para la página de PROYECTOS
const title: string = "Proyectos y Obras Destacadas";
const subTitle: string =
  "Explora nuestra trayectoria a través de soluciones eléctricas ejecutadas con los más altos estándares. Cada proyecto refleja el compromiso de MCP Electric con la excelencia técnica.";
const secondTitle: string = "Fichas Técnicas y Análisis";
const secondSubTitle: string =
  "Detalles de ingeniería y desafíos superados en nuestras instalaciones más complejas.";

const pageTitle: string = `Proyectos | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "@id": "https://mcpelectric.cl/proyectos",
    "url": "https://mcpelectric.cl/proyectos",
    "name": "Proyectos Realizados | MCP Electric",
    "description": "Portafolio de obras y proyectos ejecutados por MCP Electric.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://mcpelectric.cl",
      "name": "MCP Electric"
    },
    "inLanguage": "es-CL"
  }}
>
  <section
    class="mx-auto max-w-[85rem] space-y-8 px-4 pt-16 sm:px-6 lg:px-8 2xl:max-w-full"
  >
    <div class="mx-auto max-w-3xl text-left sm:text-center">
      <h1
        class="block text-4xl font-bold tracking-tight text-neutral-800 md:text-5xl lg:text-6xl dark:text-neutral-200"
      >
        {title}
      </h1>

      <p
        class="mt-4 text-lg text-neutral-600 dark:text-neutral-400"
      >
        {subTitle}
      </p>
    </div>
  </section>

  <section
    class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
  >
    {/* Verificamos si existen proyectos antes de intentar renderizar */}
    {projects.length > 0 ? (
      <>
        {/* Rejilla de proyectos (excluyendo el más reciente) */}
        <div class="grid gap-6 lg:grid-cols-2">
          {otherProjects.map((projectEntry) => (
            <CardBlog blogEntry={projectEntry} />
          ))}
        </div>

        {/* Proyecto Destacado (El más reciente) */}
        {mostRecentProject && (
          <div class="mt-10 lg:mt-14">
            <CardBlogRecent blogEntry={mostRecentProject} />
          </div>
        )}
      </>
    ) : (
      /* Mensaje amigable si la carpeta content/blog/es/ está vacía */
      <div class="py-20 text-center">
        <p class="text-neutral-500">Aún no se han cargado proyectos en la carpeta content/blog/es/</p>
      </div>
    )}
  </section>

  {/* Sección de Insights / Análisis Técnicos */}
  <section
    class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
  >
    <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
      <h2
        class="text-2xl font-bold text-neutral-800 md:text-4xl md:leading-tight dark:text-neutral-200"
      >
        {secondTitle}
      </h2>
      <p class="mt-1 text-neutral-600 dark:text-neutral-400">
        {secondSubTitle}
      </p>
    </div>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {
        insightPosts.map((insightEntry) => (
          <CardInsight insightEntry={insightEntry} />
        ))
      }
    </div>
  </section>
</MainLayout>