---
// Importar componentes de sección y utilidades
import { SITE } from "@data/constants";
import MainLayout from "@/layouts/MainLayout.astro";
import { Image } from "astro:assets";
import { getCollection, render } from "astro:content";

// Generar rutas estáticas para los análisis en Español
export async function getStaticPaths() {
  const insightPosts = await getCollection("insights", ({ id }) =>
    id.startsWith("es/")
  );
  return insightPosts.map((post) => {
    const idWithoutLang = post.id.replace(/^es\//, ""); 
    return {
      params: { id: idWithoutLang },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const { Content } = await render(post);

const pageTitle: string = `${post.data.title} | ${SITE.title}`;
const metaDescription = post.data.description;
const ogTitle = `${post.data.title} | Análisis Técnico | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "Article",
    headline: post.data.title,
    description: metaDescription,
    image: post.data.cardImage.src,
    author: {
      "@type": "Organization",
      name: SITE.title,
    },
    publisher: {
      "@type": "Organization",
      name: SITE.title,
      logo: {
        "@type": "ImageObject",
        url: "https://mcpelectric.cl/favicon.ico",
      },
    },
    mainEntityOfPage: {
      "@type": "WebPage",
      "@id": `https://mcpelectric.cl/insights/${post.id.replace(/^es\//, "")}`,
    },
  }}
>
  <section class="py-6 sm:py-8 lg:py-12">
    <div class="mx-auto max-w-(--breakpoint-xl) px-4 md:px-8">
      <div class="grid gap-8 md:grid-cols-2 lg:gap-12">
        <div>
          <div class="h-64 overflow-hidden rounded-lg shadow-lg md:h-auto">
            <Image
              class="h-full w-full object-cover object-center"
              src={post.data.cardImage}
              alt={post.data.cardImageAlt}
              draggable={"false"}
              format={"avif"}
            />
          </div>
          <div
            id="progress-mobile"
            class="fixed top-0 left-0 h-2 w-full bg-linear-to-r from-red-600/30 to-red-600 md:hidden z-50"
          >
          </div>
          <div id="pin" class="mt-10 hidden space-y-4 md:block">
            <div
              class="h-px w-full overflow-hidden bg-neutral-300 dark:bg-neutral-700"
            >
              <div
                id="progress"
                class="h-px w-full bg-linear-to-r from-red-600/30 to-red-600"
              >
              </div>
            </div>
            <p class="text-sm text-pretty text-neutral-500">
              Tabla de Contenidos:
            </p>
            <div id="toc" class="">
              <ul
                class="space-y-2 text-base text-pretty text-neutral-700 transition duration-300 dark:text-neutral-400"
              >
              </ul>
            </div>
          </div>
        </div>

        <div class="md:pt-8">
          <h1
            class="mb-4 text-center text-2xl font-bold text-balance text-neutral-800 sm:text-3xl md:mb-6 md:text-left dark:text-neutral-200"
          >
            {post.data.title}
          </h1>

          <article
            class="text-lg text-pretty text-neutral-700 dark:text-neutral-300"
          >
            <Content />
          </article>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

