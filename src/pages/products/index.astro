---
// Importar componentes necesarios
import MainLayout from "@/layouts/MainLayout.astro";
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";
import CardSmall from "@components/ui/cards/CardSmall.astro";
import CardWide from "@components/ui/cards/CardWide.astro";
import FeaturesStatsAlt from "@components/sections/features/FeaturesStatsAlt.astro";
import TestimonialsSectionAlt from "@components/sections/testimonials/TestimonialsSectionAlt.astro";

import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { SITE } from "@data/constants";

// Obtener equipos/servicios desde la colección 'products' en español
const product: CollectionEntry<"products">[] = (
  await getCollection("products", ({ id }) => {
    return id.startsWith("es/");
  })
).sort(
  (a: CollectionEntry<"products">, b: CollectionEntry<"products">) =>
    a.data.main.id - b.data.main.id
);

// Variables de contenido adaptadas a MCP Electric
const title: string = "Equipos e Instrumentación";
const subTitle: string =
  "Descubre la tecnología y precisión de los equipos utilizados por MCP Electric. Desde instrumentación certificada hasta sistemas de control avanzados, garantizamos calidad técnica en cada componente para tus proyectos industriales.";

// Datos de testimonios reales para el sector eléctrico
const testimonials = [
  {
    content:
      " \"La implementación del sistema de monitoreo NMEA2000 por parte de MCP Electric transformó la gestión de nuestra flota. La precisión de los datos y la robustez del equipamiento son excepcionales. Es vital contar con expertos que entiendan las exigencias del entorno marítimo en Magallanes.\" ",
    author: "Ricardo Oyarzún",
    role: "Gerente de Operaciones | Naviera Austral",
    avatarSrc: "https://images.unsplash.com/photo-1500648767791-00dcc994a43e?q=80&w=1374&auto=format&fit=crop",
    avatarAlt: "Descripción del avatar",
  },
  {
    content:
      " \"Como arquitecto especializado en proyectos sustentables, el diseño de tableros y la integración fotovoltaica de MCP Electric han sido fundamentales. Sus soluciones inteligentes no solo optimizan la energía, sino que cumplen con los más altos estándares de seguridad y normativa SEC.\" ",
    author: "Elena Valdés",
    role: "Arquitecta Senior | EkoDiseño",
    avatarSrc: "https://images.unsplash.com/photo-1544005313-94ddf0286df2?q=80&w=1376&auto=format&fit=crop",
    avatarAlt: "Descripción del avatar",
  },
  {
    content:
      " \"Llevamos años confiando el mantenimiento correctivo y el análisis termográfico de nuestra planta a MCP Electric. Su instrumentación es de primer nivel y los reportes técnicos son clave para nuestra continuidad operativa. Un servicio impecable y cercano.\" ",
    author: "Mauricio Lagos",
    role: "Jefe de Mantenimiento | Industrial Sur",
    avatarSrc: "https://images.unsplash.com/photo-1474176857210-7287d38d27c6?q=80&w=1470&auto=format&fit=crop",
    avatarAlt: "Descripción del avatar",
  },
];

const pageTitle: string = `Productos y Equipos | ${SITE.title}`;
const metaDescription =
  "Explora la instrumentación y los equipos eléctricos de alta precisión de MCP Electric, diseñados para entornos industriales y marítimos exigentes.";
const ogTitle = "Equipos Eléctricos de Alta Gama | MCP Electric";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://mcpelectric.cl/productos",
    url: "https://mcpelectric.cl/productos",
    name: "Equipos Eléctricos e Instrumentación | MCP Electric",
    description:
      "Explora la instrumentación técnica y los sistemas de control de MCP Electric.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://mcpelectric.cl",
      name: "MCP Electric",
      description:
        "MCP Electric ofrece ingeniería, instrumentación y servicios eléctricos especializados.",
    },
    inLanguage: "es-CL",
  }}
>
  <div
    class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
  >
    <div class="mb-4 flex items-center justify-between gap-8 sm:mb-8 md:mb-12">
      <div class="flex items-center gap-12">
        <h1
          class="text-2xl font-bold tracking-tight text-balance text-neutral-800 md:text-4xl md:leading-tight dark:text-neutral-200"
        >
          {title}
        </h1>
        {
          subTitle && (
            <p class="hidden max-w-2xl text-pretty text-neutral-600 md:block dark:text-neutral-400">
              {subTitle}
            </p>
          )
        }
      </div>
      <PrimaryCTA title="Testimonios" url="#testimonials" noArrow={true} />
    </div>

    <section class="grid grid-cols-1 gap-4 sm:grid-cols-3 md:gap-6 xl:gap-8">
      {
        product.map((product, index) => {
          const position = index % 4;
          if (position === 0 || position === 3) {
            return <CardSmall product={product} />;
          } else {
            return <CardWide product={product} />;
          }
        })
      }
    </section>
  </div>

  {/* Sección de beneficios alternativos */}
  <FeaturesStatsAlt
    title="¿Por qué elegir nuestra tecnología?"
    subTitle="Desde un diagnóstico preventivo hasta la implementación de una red SCADA, utilizamos equipos de medición certificados para asegurar que cada conexión sea eficiente y segura."
    benefits={[
      "Instrumentación calibrada para diagnósticos precisos.",
      "Sistemas de control adaptados a condiciones climáticas extremas.",
      "Soporte técnico experto basado en normativas SEC vigentes.",
    ]}
  />

  <section id="testimonials">
    <TestimonialsSectionAlt
      title="Confianza de nuestros clientes"
      testimonials={testimonials}
    />
  </section>
</MainLayout>