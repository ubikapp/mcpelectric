---
// Importar componentes necesarios
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Importar imágenes
import blueprints from "@images/blueprints-image.avif";
import usingTools from "@images/using-tools.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Sistemas de Control y Conectividad",
    subTitle:
      "Potenciamos la operación mediante la integración de red NMEA2000 para monitoreo avanzado y sistemas CCTV de vigilancia confiable. Desarrollamos programación industrial a medida, sistemas SCADA y domótica inteligente para el control total de iluminación, climatización y sistemas auxiliares en entornos industriales, marítimos y residenciales.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Planos técnicos y tablet con diagramas eléctricos.",
    imgTwo: progressBuilding,
    imgTwoAlt: "Integración de sistemas de control inteligente.",
    btnExists: true,
    btnTitle: "Cotizar Integración",
    btnURL: "/contacto",
  },
  {
    isRightSection: false,
    title: "Diagnóstico Avanzado y Termografía",
    subTitle:
      "Realizamos análisis críticos para la continuidad operativa: Termografía Cualitativa y Cuantitativa para identificar anomalías térmicas, análisis de vibraciones en maquinaria rotativa y análisis de red eléctrica según normativas vigentes. Diagnósticos precisos que permiten una toma de decisiones informada.",
    img: aerialView,
    imgAlt: "Análisis térmico y técnico de sistemas eléctricos",
    btnExists: true,
    btnTitle: "Solicitar Análisis",
    btnURL: "/contacto",
  },
  {
    isRightSection: true,
    title: "Mantenimiento Técnico Especializado",
    subTitle:
      "Ofrecemos servicios de mantenimiento preventivo (Nivel 1) y correctivo (Nivel 2), incluyendo sustitución de componentes y reparación de fallas. Somos expertos en el mantenimiento de motores y bombas, asegurando la máxima fiabilidad y extendiendo la vida útil de sus activos críticos.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Técnicos realizando mantenimiento industrial",
    imgTwo: usingTools,
    imgTwoAlt: "Intervención técnica en motores eléctricos",
  },
  {
    isRightSection: false,
    title: "Ensayos, Instrumentación y Seguridad",
    subTitle:
      "Ejecutamos pruebas de medición de aislamiento, diagnóstico de motores eléctricos y verificación de instalación inicial para certificación SEC. Además, realizamos la instalación y calibración de instrumentación y sensores para procesos que requieren precisión absoluta.",
    img: underConstruction,
    imgAlt: "Equipos de medición y seguridad eléctrica",
    btnExists: true,
    btnTitle: "Cotizar Verificación",
    btnURL: "/contacto",
  },
  {
    isRightSection: true,
    title: "Montaje, Tableros y Energía Solar",
    subTitle:
      "Diseño y fabricación de tableros eléctricos de fuerza y control personalizados. Implementamos sistemas fotovoltaicos para eficiencia energética y realizamos visitas técnicas en terreno para evaluar y definir el alcance de sus proyectos eléctricos en toda la región.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Diseño de tableros eléctricos",
    imgTwo: aerialView,
    imgTwoAlt: "Instalación de paneles fotovoltaicos",
    btnExists: true,
    btnTitle: "Solicitar Visita Técnica",
    btnURL: "/contacto",
  },
];

const pageTitle: string = `Servicios | ${SITE.title}`;
const metaDescription =
  "MCP Electric ofrece soluciones eléctricas integrales en Magallanes: desde mantenimiento industrial y análisis térmico hasta domótica y sistemas fotovoltaicos.";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
>
  <MainSection
    title="Servicios Eléctricos Integrales"
    subTitle="Desde diagnósticos precisos y mantenimientos programados hasta la fabricación e implementación de sistemas complejos. Explore nuestra gama de servicios y cotice directamente el que necesite. Operamos en toda la Región de Magallanes."
    btnExists={true}
    btnTitle="Ir a Contacto"
    btnURL="/contacto"
  />

  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }

  <FeaturesStats
    title="Excelencia en cada Conexión"
    subTitle="Nuestro compromiso con la calidad asegura que sus proyectos eléctricos estén construidos para durar y operar bajo las condiciones más exigentes."
    mainStatTitle="99.8%"
    mainStatSubTitle="de tasa de finalización de proyectos"
    stats={[
      {
        stat: "100%",
        description: "Cumplimiento Normativa SEC",
      },
      {
        stat: "Región",
        description: "Cobertura en todo Magallanes",
      },
      {
        stat: "24/7",
        description: "Soporte Técnico Especializado",
      },
    ]}
  />
</MainLayout>